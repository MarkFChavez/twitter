<!DOCTYPE html>
<html>
<head>
	<title> <%= yield :title %> </title>
  	<%= stylesheet_link_tag    "application", :media => "all" %>
  	<%= javascript_include_tag "application" %>
  	<%= csrf_meta_tags %>
</head>
<body>

	<div class="container-fluid">
		<div class="row-fluid">
			<div class="span12">	
				<h1> Twitter </h1>
				<hr />
			</div>
		</div>

		<% if notice %>
			<div class="row-fluid">
				<div class="span12">
					<div class="alert alert-success">
						<%= notice %>
					</div>
				</div>
			</div>
		<% end %>

		<% if alert %>
			<div class="row-fluid">
				<div class="span12">
					<div class="alert alert-error">
						<%= alert %>
					</div>
				</div>
			</div>
		<% end %>

		<%= yield %>
	</div>

</body>
</html>
